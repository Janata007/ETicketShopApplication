@{
}

@model List<ETicket.Domain.DomainModels.Order>



<div class="container">


    <div class="row">
        <a class="btn btn-outline-success" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>


    </div>


    <div class="row m-5">

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Info</th>
                    <th scope="col">Number of Tickets</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>

                @for (int i = 0; i < Model.Count; i++)
                {

                    var item = Model[i];

                    <tr>
                        <th scope="row">(i+1)</th>
                        <td>@item.User.UserName</td>
                        <td>@item.Movies.Count()</td>

                        <td><a asp-route-orderId="@item.Id" asp-action="Details" class="btn btn-info">View Ticket Order</a></td>
                        <td><a asp-route-orderId="@item.Id" asp-action="CreateInvoice" class="btn btn-info">Create an Invoice</a></td>
                    </tr>

                }

            </tbody>



        </table>
    </div>
</div>