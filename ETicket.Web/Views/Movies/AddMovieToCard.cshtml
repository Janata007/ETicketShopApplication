@model ETicket.Domain.DTO.AddToShoppingCartDto

@{ 

    ViewData["Title"] = "Add to Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 


<h1>Add Selected Movie to User Order:</h1>
<hr / >
<div class="row">

    <div class="col-md-4 m-auto">
        <form asp-action="AddMovieToCard" method="post">
            <input type="hidden" asp-for="MovieId" />
            <div class="form-group">
                <label asp-for="SelectedMovie.MovieName"></label>
                <input disabled asp-for="SelectedMovie.MovieName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="TicketQuantity"></label>
                <input asp-for="TicketQuantity" class="form-control" />
            </div>

            <div class="form-group">
                <input  type="submit" value="Save" class="btn btn-primary"/>
            </div>

        </form>

    </div>
</div>